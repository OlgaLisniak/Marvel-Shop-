{{> header}}

<br>
<br>


<div class="container">
    <br>
    <br>
    <h1 class="text-center">Данные о заказе</h1>
    <br>
    <div class="panel panel-default">
            <div class="panel-body">
               <h4><p><strong>Имя: </strong>{{user.username}}</p></h4>
               <h4><p><strong>Email: </strong>{{user.email}}</p></h4>
               <h4><p><strong>Номер телефона: </strong>{{user.phoneNumber}}</p></h4>
               <h4><p><strong>Адрес: </strong>{{user.address.country}}, {{user.address.city}}, {{user.address.street}}, {{user.address.house}} - {{user.address.flat}}</p></h4>
            </div>
    </div>
     {{# if products }}
        <div class="cart page">
            <ul class="list-group">
                {{# each products }}
                <li class="list-group-item clearfix">
                    <div class="col-xs-5">
                        <h4><strong>{{ this.item.title }}</strong><br/></h4>
                        <em>{{{this.item.description}}}</em>
                    </div>
                    <div class="col-xs-2 text-right">
                       <h2><span class="badge badge-secondary">{{ this.quantity }}</span></h2>
                    </div>
                    <div class="col-xs-3 text-right">
                        <h3>{{ this.price }} грн</h3>
                    </div>
                </li>
                {{/each}}
                
            </ul>
        </div>
        <div class="text-right">
            <h3>К оплате: <strong>{{ totalPrice }} грн</strong></h3>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-11">
                <a href="/cancel" type="button" class="btn btn-primary btn-lg">Отмена</a>
            </div>
            <div class=" col-xs-1">
                <a href="/orderConfirm" type="button" class="btn btn-success btn-lg">Далее</a>
                
            </div>
        </div>
    {{/if}}
</div>
{{> footer}}